<!-- res/layout/item_cart.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/cart_foodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cart_foodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_decrease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_apartform" />

            <TextView
                android:id="@+id/cartfoodsluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sl" />

            <ImageView
                android:id="@+id/img_increase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_add" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_delete_item"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:background="#F4511E"
        android:backgroundTint="#F4511E"
        android:text="@string/btn_delete"
        android:textColor="#212121" />

</LinearLayout>
